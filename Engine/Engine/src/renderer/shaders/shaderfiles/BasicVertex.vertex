#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec2 aTexCoord;
layout (location = 2) in vec3 aNormals;

uniform mat4 transform;
uniform mat4 mesh;
out vec2 TexCoord;

out vec3 VertexPos;

void main()
{
	VertexPos = (mesh * vec4(aPos, 1.0f)).xyz;
	gl_Position = transform * mesh * vec4(aPos, 1.0f);
	TexCoord = aTexCoord;
}